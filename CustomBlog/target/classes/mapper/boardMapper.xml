<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.custom.blog.dao.BoardMapper">

<insert id="insertBoard" parameterType="Board">
INSERT INTO board
(
	boardnum
	, menu_name
	, title
	, text
	<if test="originalfile != null">
	, originalfile
	, savedfile	
	</if>
)
VALUES
(
	board_seq.nextval
	, #{menu_name}
	, #{title}
	, #{text}
	<if test="originalfile != null">
	, #{originalfile}
	, #{savedfile}
	</if>
)
</insert>

